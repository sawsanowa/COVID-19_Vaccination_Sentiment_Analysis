
tweet = pd.read_csv("/content/drive/MyDrive/Colab Notebooks/Final_ALL_Labled_012.csv",encoding='utf-8', usecols=['Sentiment', 'Text'])

tweet.head()

#Bar chart
import seaborn as sns
sns.countplot(x='Sentiment', data=tweet)

#Pie chart
import matplotlib.pyplot as plt
%matplotlib inline
plot_size = plt.rcParams["figure.figsize"] 
print(plot_size[0]) 
print(plot_size[1])
plot_size[0] = 8
plot_size[1] = 6
plt.rcParams["figure.figsize"] = plot_size 

tweet.sentiment.value_counts().plot(kind='pie', autopct='%1.0f%%', colors=["tab:orange", "tab:green", "tab:blue"])
